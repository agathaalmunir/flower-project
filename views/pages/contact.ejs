<%- include('../partials/head') -%>

<%- include('../partials/nav') -%>
  
<main>
<!--submission form section  -->
<section class="contact-container">
    <form action="/contact" method="POST">
        <div>
            <div class="center-text">
                <h1>Get in touch!</h1>
            <br>
                <h3>We'd love to hear from you. Send us a message (or a bouquet), and we'll get back to you.</h3>
            </div>

            <div class="spaced">
                <label for="senderName">*Name:</label>
                    <input type="text" id="senderName" name="senderName" placeholder="Name" required minlength="1">
                    <br>
                <label for="senderEmail">*Email:</label>
                    <input type="email" id="senderEmail" name="senderEmail" placeholder="Email" required minlength="5"> 
            </div>

            <div>
                <h3>*Thoughts? Questions? Concerns?</h3>
                <label for="message"></label>
                    <textarea id="message" name="message" placeholder="Write your message here.." required minlength="1" maxlength="300"></textarea>
            </div>
        </div>
    
        <!-- Submit button --> 
        <button class="rounded-btn" type="submit" value="Submit">Send!</button> 
    </form>
    
</section>    
</main>

<%- include('../partials/footer') -%>
